<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="@dimen/margin_val_160px"
        android:layout_height="@dimen/margin_val_160px"
        android:layout_marginBottom="@dimen/margin_val_16px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_val_10px">

        <com.lepow.hiremote.widget.CircleProgressBar
            xmlns:circle="http://schemas.android.com/apk/res/com.lepow.androidhismart"
            android:id="@+id/peripheral_power"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            circle:progressDirection="-1"
            circle:min="0"
            circle:max="100"
            circle:startAngle="-90"
            circle:progressBarColor="@color/default_green_bg"
            circle:progressBarThickness="@dimen/margin_val_16px"
            circle:progressBarAlpha="100"
            circle:progressBarBackgroundColor="@android:color/white"
            circle:progressBarBackgroundThickness="@dimen/margin_val_16px"
            circle:progressBarBackgroundAlpha="100"
            circle:text=""/>

        <com.mn.tiger.widget.imageview.CircleImageView
            android:id="@+id/peripheral_image"
            android:layout_width="@dimen/margin_val_144px"
            android:layout_height="@dimen/margin_val_144px"
            android:src="@drawable/icon_device"
            android:layout_centerInParent="true"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/peripheral_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/peripheral_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_above="@+id/peripheral_location"
        android:layout_marginBottom="@dimen/margin_val_16px"
        android:textColor="@android:color/white"/>

</RelativeLayout>