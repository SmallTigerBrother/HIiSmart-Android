<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/login_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_val_160px"
        android:layout_marginLeft="@dimen/margin_val_40px"
        android:layout_marginRight="@dimen/margin_val_40px"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_account_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bottom_white_stroke_40ffffff_bg"
            android:padding="@dimen/margin_val_16px"
            android:hint="@string/account_hint"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_30pt"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/login_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/default_edittext_bg"
            android:textSize="@dimen/text_size_30pt"
            android:padding="@dimen/margin_val_16px"
            android:textColorHint="@android:color/white"
            android:textColor="@android:color/white"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:singleLine="true"/>

    </LinearLayout>

    <TextView
        android:id="@+id/login_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_val_20px"
        android:padding="@dimen/margin_val_10px"
        android:text="@string/forgot_password"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_30pt"
        android:layout_below="@id/login_input_layout"
        android:layout_marginLeft="@dimen/margin_val_40px"
        android:layout_marginRight="@dimen/margin_val_40px"/>

    <Button
        android:id="@+id/login_register_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_val_60px"
        android:layout_marginLeft="@dimen/margin_val_40px"
        android:layout_marginRight="@dimen/margin_val_40px"
        android:text="@string/register_btn_text"
        android:textSize="@dimen/text_size_30pt"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:background="@color/default_btn_bg"/>

    <Button
        android:id="@+id/facebook_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/login_register_btn"
        android:layout_marginBottom="@dimen/margin_val_60px"
        android:layout_marginLeft="@dimen/margin_val_86px"
        android:background="@color/default_btn_bg"
        android:textColor="@android:color/white"
        android:text="Facebook"
        android:textSize="@dimen/text_size_30pt"
        android:textAllCaps="false"
        android:layout_marginRight="@dimen/margin_val_86px"/>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/facebook_login_btn"
        android:layout_marginBottom="@dimen/margin_val_60px"
        android:layout_marginLeft="@dimen/margin_val_40px"
        android:layout_marginRight="@dimen/margin_val_40px"
        android:text="@string/login_btn_text"
        android:textSize="@dimen/text_size_30pt"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@color/default_btn_bg"/>

</RelativeLayout>