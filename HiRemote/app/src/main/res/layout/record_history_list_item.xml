<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/margin_val_10px"
              android:paddingLeft="@dimen/margin_val_16px"
              android:paddingRight="@dimen/margin_val_16px"
              android:paddingTop="@dimen/margin_val_10px">

    <TextView
        android:id="@+id/record_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_normal"
        android:textSize="@dimen/text_size_32pt">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_val_10px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/record_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_val_666666"
            android:textSize="@dimen/text_size_26pt"/>

        <TextView
            android:id="@+id/record_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_val_666666"
            android:layout_marginLeft="@dimen/margin_val_30px"
            android:visibility="gone"
            android:textSize="@dimen/text_size_26pt"/>

    </LinearLayout>

</LinearLayout>