<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_green_bg">

    <Button
        android:id="@+id/get_start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_val_16px"
        android:paddingBottom="@dimen/margin_val_16px"
        android:layout_marginLeft="@dimen/margin_val_60px"
        android:layout_marginRight="@dimen/margin_val_60px"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="24dp"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:background="@color/default_btn_bg"
        android:textAllCaps="false"
        android:text="@string/start"/>

    <com.mn.tiger.widget.viewpager.DotIndicatorBannerPagerView
        android:id="@+id/intro_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/get_start_button">
    </com.mn.tiger.widget.viewpager.DotIndicatorBannerPagerView>

</RelativeLayout>